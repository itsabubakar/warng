---
import BaseLayout from "@layout/BaseLayout.astro";
import type { WithContext, Thing } from "schema-dts";

// About WAR Data
const aboutData = {
  title: "Women Aware of Rights Initiative (WAR)",
  description:
    "Established in 2018, is a nonprofit organization committed to advancing the rights, safety, and empowerment of women and girls across Northern Nigeria. We work to break the culture of silence surrounding Sexual and Gender-Based Violence (SGBV), provide holistic support to survivors, and build a society where women know, own, and can defend their rights.",
};

// Team Data
const teamData = [
  {
    name: "Bilqees Abdulrasheed Shebby Esq",
    role: "Executive Director",
    image: "/assets/team/bilqees.jpg",
  },
  {
    name: "Kaigama Mustapha",
    role: "Advocacy Director",
   image: "/assets/team/kaigama.jpg",
  },
  {
    name: "Shukrah Sebiotimo",
    role: "Chairperson Board of Trustees",
     image: "/assets/team/shukrah.jpg",
  },
  {
    name: "Maryam Lawal",
    role: "Partnerships Manager",
     image: "/assets/team/maryam.jpg",
  },
    {
    name: "Ahmed Isiyaku Danlawan",
    role: "Director, Outreach and external relations",
   image: "/assets/team/ahmed.jpg",
  },
    {
    name: "Mohammed Ammani",
    role: "Monitoring and Evaluation Team Lead",
   image: "/assets/team/mohammed.jpg",
  },
    {
    name: "Hafsah Sule Dauda",
    role: "Inganci Center for Rehabilitation Team Lead",
   image: "/assets/team/hafsah.jpg",
  },
    {
    name: "Hauwa Sebiotimo",
    role: "Director of Child Welfare",
   image: "/assets/team/hauwa.jpg",
  },
];


// WAR Focus Areas (Expertise)
const expertiseData = {
  title: "Our Focus Areas:",
  expertise: [
    {
      title: "Women Aware of Rights Advocacies",
      description:
        "We drive grassroots and policy-level campaigns to raise awareness on the rights of women and girls, with a strong emphasis on the VAPP Act and other protective laws. Through community dialogues, media engagements, and stakeholder sensitization, we challenge harmful social norms and advocate for justice for SGBV survivors.",
    },
    {
      title: "Community Services & Capacity Building",
      description:
        "We empower teachers, school administrators, and law enforcement with knowledge and tools to prevent and respond to abuse. Programs include legal awareness, townhall meetings, and survivor-centered training to build systemic change from the ground up.",
    },
    {
      title: "Inganci Rehabilitation Center",
      description:
        "Located in Kaduna, Inganci offers shelter, trauma-informed counseling, legal aid, and vocational training in art, fashion, and food. It is more than a safe space—Inganci is a sanctuary of restoration, dignity, and hope for SGBV survivors.",
    },
  ],
};

// SEO metadata
const seo = {
  title: "About WAR – Women Aware of Rights Initiative",
  description: "Learn about Women Aware of Rights Initiative (WAR), a nonprofit advancing women’s rights, justice, and rehabilitation in Northern Nigeria.",
};

// Schema.org metadata
const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "inLanguage": "en-US",
  "@id": Astro.url.href,
  "url": Astro.url.href,
  "name": "About WAR – Women Aware of Rights Initiative",
  "description": "Women Aware of Rights Initiative is a nonprofit dedicated to empowering women and girls in Northern Nigeria through advocacy, education, and survivor rehabilitation.",
  "isPartOf": {
    "@type": "WebSite",
    "url": `${Astro.site}`,
    "name": "WAR Initiative",
    "description": "WAR Initiative supports women and girls through advocacy, community education, and holistic survivor services."
  }
};
---

<BaseLayout seo={seo} schema={schema}>
  <section class="mx-auto max-w-[85rem] px-4 pb-12 pt-48 sm:px-6 lg:px-8">
    <div class="max-w-7xl">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h1 class="text-balance text-4xl text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl">
          {aboutData.title}
        </h1>
        <p class="mt-8 text-pretty text-lg font-medium text-slate-700 sm:text-xl/8">
          {aboutData.description}
        </p>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-[85rem] px-4 py-24 sm:px-6 lg:px-8 lg:py-32">
    <div class="group relative isolate overflow-hidden rounded-3xl bg-yellow-200 p-5 sm:p-11">
      <div class="group pointer-events-none absolute inset-0 -top-[10%] h-[120%] w-full rounded-xl bg-linear-to-r/oklch from-yellow-200 to-off-white opacity-0 transition duration-1000 group-hover:opacity-100">
      </div>
      <div class="svgBlock mx-auto max-w-7xl">
        <h2 class="relative text-balance pl-4 text-2xl font-semibold text-slate-800 md:text-3xl md:leading-tight">
          {expertiseData.title}
        </h2>
        <dl class="relative mt-10 grid max-w-xl grid-cols-1 items-start text-base/7 text-slate-600 sm:max-w-none lg:grid-flow-row-dense lg:auto-rows-fr lg:grid-cols-3">
          {
            expertiseData.expertise.map((item, index) => (
              <div class={`px-5 py-5 sm:px-10 lg:py-0 ${index === 1 ? "h-full border-y border-dashed border-slate-400 lg:border-x lg:border-y-0" : ""}`}>
                <dt class="text-balance text-lg font-semibold text-slate-600">
                  {item.title}
                </dt>
                <dd class="mt-2 text-pretty text-slate-500">
                  {item.description}
                </dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-[85rem] px-4 py-24 sm:px-6 lg:px-8 lg:py-32">
  <div class="mx-auto max-w-7xl text-center">
    <h2 class="text-3xl font-semibold text-slate-800 sm:text-4xl">Meet the Team</h2>
    <p class="mt-4 text-lg text-slate-600">The passionate individuals behind WAR’s mission and impact.</p>

    <div class="mt-16 grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-4">
      {
        teamData.map((member) => (
          <div class="flex flex-col items-center text-center">
            <img
              class="h-40 w-40 rounded-full object-cover shadow-md"
              src={member.image}
              alt={member.name}
              loading="lazy"
            />
            <h3 class="mt-4 text-lg font-semibold text-slate-800">{member.name}</h3>
            <p class="text-slate-600">{member.role}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>


  <style>
    .svgBlock::after {
      content: "";
      position: absolute;
      inset: 0;
      background-image: url(/guilloche.svg);
      background-repeat: repeat;
      background-position: right top;
      background-size: 20px, 20px;
      opacity: 0.075;
      background-clip: padding-box;
      mask-image: linear-gradient(270deg, rgb(0, 0, 0), rgba(0, 0, 0, 0));
      pointer-events: none;
    }
  </style>
</BaseLayout>
