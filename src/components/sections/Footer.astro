---
import FooterForm from "@ui/forms/FooterForm.astro";
import ContactInfo from "@common/ContactInfo.astro";

// WAR NG branding and details
const companyName = "Women Aware of Rights Initiative";
const companyDescription =
  "WAR Initiative is a nonprofit organization committed to breaking the culture of silence, empowering women and girls, and building safe, just communities across Northern Nigeria.";

const contactDetails = {
  address: "Kaduna, Nigeria",
  phone: "+234 916 8671 417",
  email: "Womenawareofrightsnigeria@gmail.com",
  website: "www.womenawareofrights.com.ng",
};

const copyrightYear = new Date().getFullYear();
---

<footer
  class="mt-auto w-full bg-gradient-to-t from-yellow-100 via-transparent to-white pb-10"
>
  <div class="mx-auto mt-auto w-full max-w-[85rem] px-4 pb-10 sm:px-6 lg:px-8">
    <hr class="mb-10 border-slate-200" />

    <div class="grid grid-cols-2 gap-6 md:grid-cols-5">
      {/* Organization Info */}
      <div class="col-span-full self-center xl:col-span-2">
        <a
          href="/"
          class="flex-none text-xl font-semibold text-slate-700 uppercase focus:opacity-80 focus:outline-hidden"
          aria-label="WAR NG Homepage"
        >
          {companyName}
        </a>
        <p class="mt-5 text-pretty text-slate-600 lg:w-5/12 xl:w-10/12">
          {companyDescription}
        </p>
      </div>

      {/* Contact Info */}
      <div class="col-span-1 md:col-span-2 xl:col-span-1 xl:col-start-3">
        <ContactInfo {...contactDetails} />
      </div>
    </div>

    {/* Divider line */}
    <hr class="mt-10 mb-5 border-slate-200" />

    <div
      class="grid gap-y-2 sm:flex sm:items-center sm:justify-between sm:gap-y-0"
    >
      {/* Footer bottom info */}
      <p class="text-sm text-slate-400/50">
        &copy; 2018â€“{copyrightYear}
        {companyName}.
      </p>
    </div>
  </div>
</footer>
