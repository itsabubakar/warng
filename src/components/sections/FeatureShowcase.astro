---
const title = `Who We Are`;
const subTitle = `Women Aware of Rights Initiative (WAR Initiative) is a nonprofit based in Northern Nigeria focused on breaking the culture of silence, empowering women and girls, and building a just, inclusive society.`;

// Features / pillars of the organization
const features = [
  {
    title: "Our Mission",
    description: "To protect, educate, and empower women and girls through legal advocacy, psychosocial support, survivor-centered rehabilitation, and cultural-economic empowerment rooted in healing and heritage.",
  },
  {
    title: "Our Impact",
    description: `- 200,000+ women educated on legal, reproductive, and civic rights  
- 1,000+ survivors supported through the Inganci Centre  
- 500+ SGBV cases handled through legal aid and representation`,
  },
  {
    title: "Our Vision",
    description: "A just and inclusive society where every woman and girl lives free from violence, fully aware of her rights, and empowered to thrive.",
  },
  {
    title: "What We Do",
    moreFeatures: [
      "Free legal support and representation for survivors of SGBV",
      "Rehabilitation and trauma recovery via Inganci Centre",
      "Mass awareness and rights education outreach",
      "Vocational training and economic empowerment",
      "Cultural empowerment through the Arewa Fashion & Food Festival (AFFEST)",
    ],
  },
];
---

<div class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20">
  {/* Section Title */}
  <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
    <h2 class="text-2xl font-semibold text-slate-800 md:text-3xl md:leading-tight">
      {title}
    </h2>
    <p class="mt-1 text-slate-600">
      {subTitle}
    </p>
  </div>

  {/* Feature Blocks */}
  <div class="mx-auto grid max-w-[85rem] grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-2">
    {
      features.map((feature) => (
        <div class="rounded-xl border border-slate-200 p-5 shadow-sm">
          <h3 class="text-xl font-bold text-slate-700">{feature.title}</h3>

          {feature.description && (
            <p class="mt-2 whitespace-pre-line text-base text-slate-600">
              {feature.description}
            </p>
          )}

          {feature.moreFeatures && (
            <ul class="mt-4 list-disc list-inside space-y-2 text-base text-slate-600 marker:text-yellow-600">
              {feature.moreFeatures.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          )}
        </div>
      ))
    }
  </div>
</div>
